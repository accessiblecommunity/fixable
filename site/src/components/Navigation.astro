---
import { defaultNavLinks, type NavLink } from "@/lib/nav-links";

interface Props {
  navLinks?: NavLink[]
}

const { navLinks = defaultNavLinks } = Astro.props;
---

<nav aria-label="Site">
  <ul>
    {
      navLinks.map(({ name, href, headerClass }) => (
        <li class={headerClass}>
          <a {href}>{name}</a>
        </li>
      ))
    }
  </ul>
  <slot />
</nav>

<style is:global>
  /* Apply styles globally to also encompass any links in the end slot */
  nav[aria-label='Site'] {
    background: var(--black);
    display: flex;
    justify-content: space-between;
    padding: 0 1rem;

    & ul {
      display: flex;
      gap: 1em;
      list-style: none;
      margin: 0;
      padding: 0;
    }
    & a {
      color: var(--gray-050);
      display: block;
      padding: 0.5em;
      text-decoration: none;
      white-space: nowrap;
      &:hover {
        text-decoration: underline;
      }
    }
  }
</style>
