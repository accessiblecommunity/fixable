---
import type { HTMLAttributes } from "astro/types";

/** @fileoverview Form shell with general layout styles */

interface Props extends HTMLAttributes<"form"> {}
---

<form {...Astro.props}>
  <slot />
</form>

<style is:global>
  main form {
    > * {
      display: block;
      margin: 1rem 0;
    }

    & select,
    & textarea,
    & input:not([type="checkbox"], [type="radio"]) {
      display: block;
    }

    & textarea {
      width: 100%;
    }
  }
</style>
